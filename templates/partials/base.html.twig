{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE HTML>

<html>
<head>
    <title>{{ site.title }}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    {% do assets.addCss('theme://css/main.css') %}
    {% do assets.addCss('theme://css/custom.css') %}
    {{ assets.css() }}

    {% do assets.addJs('theme://js/jquery.min.js', {'priority':120, 'group':'head'}) %}
    {% do assets.addJs('theme://js/jquery.scrollex.min.js',  {'priority':119, 'group':'bottom'}) %}
    {% do assets.addJs('theme://js/jquery.scrolly.min.js', {'priority':119, 'group':'bottom'}) %}
    {% do assets.addJs('theme://js/skel.min.js', {'priority':119, 'group':'bottom'}) %}
    {% do assets.addJs('theme://js/util.js', {'priority':119, 'group':'bottom'}) %}
    {% do assets.addJs('theme://js/main.js', {'priority':119, 'group':'bottom'}) %}
    {{ assets.js('head') }}

</head>
<body>

<!-- Wrapper -->
<div id="wrapper" class="divided">

    {% block content %}
    {% endblock %}

    <!-- Footer -->
    <footer class="wrapper style1 align-center">
        <div class="inner">
            <ul class="icons">
                {% for icons in theme_config.footer.icon %}

                    <li><a href="{{ icons.link }}" class="icon style2 fa-{{ icons.name }}"><span
                                    class="label">{{ icons.title }}</span></a></li>
                {% endfor %}

            </ul>
            <p>{{ theme_config.footer.text }}</p>
        </div>
    </footer>

</div>

<!-- Scripts -->
{{ assets.js('bottom') }}

</body>
</html>
