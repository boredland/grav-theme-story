{% embed 'partials/base.html.twig' %}
    {% block header %}
        <header class="header" style="background: #98DBF7;padding-left: 8vw">
            <img src="{{ url('theme://images/') ~ '/' ~ theme_config.logo_img }}" style="
                margin: 2% 2% -0.5vw 2%;
                height: auto;
                min-height: 150px;
                width: 25%;
            ">
            <div class="slogan" style="
                margin-left: 8.5vw;
                font-size: 0.74vw;
            ">
                {{ theme_config.slogan }}
            </div>
        </header>
    {% endblock %}
    {% block content %}
        <div class="blog-header">
            <h2>{{ page.title }}</h2>
        </div>
        <div class="wrapper blog">
            {{ page.content }}
        </div>
    {% endblock %}

{% endembed %}