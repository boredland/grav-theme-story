{% embed 'partials/base.html.twig' %}
    {% block header %}
        <header class="header" style="background: #5da5c1;padding-left: 8vw;padding-bottom: 2%;">
            <a href="/">
                <img src="{{ url('theme://images/') ~ '/' ~ theme_config.logo_img }}" style="
                margin: 2% 2% -0.5vw 2%;
                height: auto;
                width: 25%;
            ">
            </a>
            <div class="slogan" style="
                margin-left: 8.5vw;
                font-size: 0.74vw;
            ">
                {{ theme_config.slogan }}
            </div>
            <h1><span>{{ page.title }}</span></h1>

        </header>
    {% endblock %}

    {% set collection = page.collection() %}

    {% block content %}
            <div class="wrapper blog">
                {{ page.content }}
                <!-- Items start here -->
                {% for child in collection %}
                    {% include 'partials/blog_item.html.twig' with {'blog':page, 'page':child, 'truncate':true, 'banner_img': header.banner_img} %}
                {% endfor %}
            </div>
    {% endblock %}
{% endembed %}