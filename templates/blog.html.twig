{% extends 'partials/with_header.html.twig' %}

    {% set collection = page.collection() %}

    {% block content %}
            <div class="blog-header">
                <h2>{{ page.title }}</h2>
            </div>
            <div class="wrapper blog">
                {{ page.content }}
                <!-- Items start here -->
                {% for child in collection %}
                    {% include 'partials/blog_item.html.twig' with {'blog':page, 'page':child, 'truncate':true, 'test': header.banner_img} %}
                {% endfor %}
            </div>
    {% endblock %}